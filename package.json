{
  "name": "claude-vps-agent",
  "version": "1.0.0",
  "description": "Self-hosted Claude Code agent with messaging bots, scheduling, and persistent memory",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "claudebridge": "./src/cli.ts"
  },
  "scripts": {
    "build": "tsc",
    "start": "tsx src/cli.ts start",
    "stop": "tsx src/cli.ts stop",
    "restart": "tsx src/cli.ts restart",
    "status": "tsx src/cli.ts status",
    "setup": "tsx setup.ts",
    "telegram": "npx tsx src/bots/telegram.ts",
    "discord": "npx tsx src/bots/discord.ts",
    "scheduler": "npx tsx src/scheduler.ts",
    "scheduler:once": "npx tsx src/scheduler.ts --once",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "boxen": "^8.0.1",
    "croner": "^8.1.0",
    "discord.js": "^14.16.0",
    "dotenv": "^16.4.0",
    "figlet": "^1.10.0",
    "gradient-string": "^3.0.0",
    "js-yaml": "^4.1.0",
    "nanospinner": "^1.2.2",
    "picocolors": "^1.1.1",
    "telegraf": "^4.16.0"
  },
  "devDependencies": {
    "@types/boxen": "^2.1.0",
    "@types/figlet": "^1.7.0",
    "@types/gradient-string": "^1.1.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0"
  }
}
