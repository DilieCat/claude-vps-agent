{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "hooks": {
    "TaskCompleted": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/hooks/on-task-completed.sh",
            "timeout": 30,
            "statusMessage": "Validating completed task..."
          }
        ]
      }
    ],
    "TeammateIdle": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/hooks/on-teammate-idle.sh",
            "timeout": 10,
            "statusMessage": "Checking teammate work..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/hooks/post-edit-lint.sh",
            "timeout": 10,
            "async": true
          }
        ]
      }
    ]
  }
}
