[Unit]
Description=Claude VPS Agent â€” Discord Bot
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=claude
Group=claude
WorkingDirectory=/home/claude/claudebridge
EnvironmentFile=/home/claude/claudebridge/.env
Environment=NODE_ENV=production
ExecStart=/usr/bin/npx tsx /home/claude/claudebridge/src/bots/discord.ts
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=claude-discord-bot

# Hardening
NoNewPrivileges=yes
ProtectSystem=strict
ReadWritePaths=/home/claude/claudebridge /home/claude/.config /home/claude/.claude /home/claude/projects
PrivateTmp=yes

[Install]
WantedBy=multi-user.target
