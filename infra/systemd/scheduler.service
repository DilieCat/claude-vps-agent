[Unit]
Description=Claude VPS Agent â€” Task Scheduler
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=claude
Group=claude
WorkingDirectory=/home/claude/claude-vps-agent
EnvironmentFile=/home/claude/claude-vps-agent/.env
Environment=NODE_ENV=production
ExecStart=/usr/bin/npx tsx /home/claude/claude-vps-agent/src/scheduler.ts
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=claude-scheduler

# Hardening
NoNewPrivileges=yes
ProtectSystem=strict
ReadWritePaths=/home/claude/claude-vps-agent /home/claude/.config /home/claude/.claude /home/claude/projects
PrivateTmp=yes

[Install]
WantedBy=multi-user.target
